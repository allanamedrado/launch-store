<div class="item">
    <div>Nome Completo</div>
    <div class="input">
        <input type="text" name="name" placeholder="Digite seu nome completo" value="{{ user.name }}" required>
    </div>
</div>

<div class="item">
    <div>Email</div>
    <div class="input">
        <input type="email" onblur="Validate.apply(this, 'isEmail')" name="email" placeholder="Digite seu email" value="{{ user.email }}">
    </div>
</div>

<div class="item">
    <div>Senha</div>
    <div class="input">
        <input type="password"
         name="password"
         {% if not user.id %}
         placeholder="Escolha uma senha"
         {%else%}
         placeholder="Digite sua senha para atualizar"
         {%endif%}
          value="{{ user.password }}">
    </div>
</div>

{% if not user.id %}
<div class="item">
    <div>Repetir senha</div>
    <div class="input">
        <input type="password" name="passwordRepeat" placeholder="Repita a senha" value="{{ user.password }}">
    </div>
</div>
{%endif%}

<div class="item">
    <div>CPF ou CNPJ</div>
    <div class="input">
        <input type="text" onblur="Validate.apply(this,'isCpfCnpj')" name="cpf_cnpj" placeholder="Digite seu documento" value="{{ user.cpf_cnpj }}" onkeydown="Mask.apply(this, 'cpfCnpj')">
    </div>
</div>

<div class="item">
    <div>CEP</div>
    <div class="input">
        <input type="text" onblur="Validate.apply(this,'isCep')" name="cep" placeholder="99999-999" value="{{ user.cep }}" onkeydown="Mask.apply(this, 'cep')">
    </div>
</div>

<div class="item">
    <div>Endereço completo</div>
    <div class="input">
        <input type="text" name="address" placeholder="Digite seu endereço" value="{{ user.address }}">
    </div>
</div>

<div class="item">
    <div>Categoria</div>
    <div>
        <select name="category_id">
            {% for category in categories %}
                <option value="{{category.id}}" {% if product.category_id == "category.id" %} selected="selected" {% endif %}>{{category.name}}</option>
            {%endfor%}
        </select>
    </div>
</div>

<div class="item">
    <div>Nome</div>
    <div>
        <input type="text" name="name" placeholder="Digite o título do anúncio" value="{{ product.name }}">
    </div>
</div>

<div class="item">
    <div>Descrição</div>
    <div>
        <textarea name="description"> {{product.description}} </textarea>
    </div>
</div>

<div class="item">
    <div>Fotos do produto</div>
    <div>
        <div id="photos-upload">
            <input 
                type="file" 
                name="photos"
                multiple
                id="photos-input"
                accept="imge/*"
                onchange="PhotosUpload.handleFileInput(event)"
            > 
            <p>Selecione até 6 fotos</p>
        </div>
        <div id="photos-preview">            
        </div>
        
    </div>
</div>

<div class="item">
    <div>Valor</div>
    <div>
        <input 
            type="text" 
            name="price" 
            value="{{product.price}}" 
            placeholder="Preço do produto"
             onkeydown="Mask.apply(this, 'formatBRL')">
    </div>

    {% if product.old_price %}
        <input type="hidden" name="old_price" value="{{product.old_price}}">
    {% endif %}
</div>

<div class="item">
    <div>Quantidade</div>
    <div>
        <input type="number" name="quantity" placeholder="Estoque dispínivel" value="{{ product.quantity }}">
    </div>
</div>

{% if product.status %}
<div class="item">
    <div>Dispínivel</div>
    <div>
        <span>
            <input type="radio" name="status" value="1" {% if product.status == "1" %} checked="checked" {% endif %}>
            Sim
        </span>

        <span>
            <input type="radio" name="status" value="2" {% if product.status == "2" %} checked="checked" {% endif %}>
            Não
        </span>
    </div>
</div>
{% endif %}